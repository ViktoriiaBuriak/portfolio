<header class="header">
  <div class="container">
    <a href="#hero" class="logo">
      <span class="first">Viktoriia</span>
      <span class="last">Buriak</span>
    </a>

    <button class="burger" id="burger" aria-label="Menu">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </button>

    <div class="menu-overlay" id="menu-overlay">
      <nav class="nav">
        <a href="#skills" data-section="skills" data-i18n="nav.skills"></a>
        <a href="#projects" data-section="projects" data-i18n="nav.projects"
        ></a>
        <a href="#contact" data-section="contact" data-i18n="nav.contact"></a>
      </nav>
      <div class="lang">
        <button data-lang="ua" onclick="i18next.changeLanguage('ua')">UA</button
        >
        <button data-lang="pl" onclick="i18next.changeLanguage('pl')">PL</button
        >
        <button data-lang="en" onclick="i18next.changeLanguage('en')">EN</button
        >
      </div>
    </div>
  </div>
</header>

<style>
  /* Твої оригінальні стилі */
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--pink-soft);
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    display: flex;
    gap: 0.3rem;
    z-index: 110;
    cursor: pointer;
  }
  .logo .first {
    color: var(--text-main);
  }
  .logo .last {
    color: var(--pink-main);
    position: relative;
  }

  .logo .last::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 100%;
    height: 2px;
    background: var(--pink-main);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.25s ease;
  }
  .logo:hover .last::after {
    transform: scaleX(1);
  }
  .logo:hover .first {
    color: var(--pink-dark);
  }

  .menu-overlay {
    display: flex;
    align-items: center;
    flex-grow: 1;
  }
  .nav {
    display: flex;
    gap: 0.8rem;
    margin-left: auto;
    margin-right: 2rem;
  }
  .nav a {
    padding: 0.45rem 0.9rem;
    text-decoration: none;
    font-size: 0.9rem;
    color: var(--pink-dark);
    border: 1px solid var(--pink-main);
    border-radius: 999px;
    transition: all 0.2s ease;
  }
  .nav a:hover,
  .nav a.active {
    background: var(--pink-main);
    color: white;
  }

  .lang button {
    margin-left: 0.4rem;
    font-size: 0.8rem;
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
  }
  .lang button.active {
    color: var(--pink-main);
    font-weight: 600;
  }

  /* Мобільний бургер */
  .burger {
    display: none;
    flex-direction: column;
    gap: 6px;
    width: 25px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 110;
    padding: 0;
  }
  .burger .line {
    width: 100%;
    height: 2px;
    background: var(--pink-main);
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .burger {
      display: flex;
    }
    .menu-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: white;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 3rem;
      opacity: 0;
      visibility: hidden;
      transition:
        opacity 0.3s ease,
        visibility 0.3s;
      z-index: 105;
    }
    .menu-overlay.is-open {
      opacity: 1;
      visibility: visible;
    }
    .nav {
      flex-direction: column;
      margin: 0;
      gap: 1.5rem;
    }
    .nav a {
      font-size: 1.2rem;
      width: 200px;
      text-align: center;
    }
    .burger.is-active .line:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .burger.is-active .line:nth-child(2) {
      opacity: 0;
    }
    .burger.is-active .line:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }
</style>

<script>
  // Використовуємо просту логіку без TypeScript помилок
  const burger = document.getElementById("burger");
  const menu = document.getElementById("menu-overlay");
  const navLinks = document.querySelectorAll(".nav a");
  const langBtns = document.querySelectorAll(".lang button");

  function toggleMenu() {
    burger?.classList.toggle("is-active");
    menu?.classList.toggle("is-open");
    document.body.style.overflow = menu?.classList.contains("is-open")
      ? "hidden"
      : "";
  }

  burger?.addEventListener("click", toggleMenu);

  // Закриваємо меню при кліку на посилання або зміну мови
  [...navLinks, ...langBtns].forEach((el) => {
    el.addEventListener("click", () => {
      if (menu?.classList.contains("is-open")) toggleMenu();
    });
  });

  // Автоматичне закриття при ресайзі
  window.addEventListener("resize", () => {
    if (window.innerWidth > 768 && menu?.classList.contains("is-open")) {
      toggleMenu();
    }
  });
</script>
